    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Jest Current File",
        "runtimeExecutable": "yarn",
        "runtimeArgs": ["jest"],
        "cwd": "${workspaceFolder}",
        "args": [ "${fileBasenameNoExtension}"],
        "console": "internalConsole",
        "outputCapture": "std",
        "internalConsoleOptions": "openOnFirstSessionStart",
        "disableOptimisticBPs": true
      },
    ]
}
