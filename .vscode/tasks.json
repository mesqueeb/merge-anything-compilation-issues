{
	"version": "2.0.0",
  "tasks": [
    {
      "label": "yarn watch",
      "type": "process",
      "command": "yarn",
      "problemMatcher": ["$tsc-watch"],
      "args": ["watch"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "revealProblems": "onProblem",
        "reveal": "always",
        "panel": "dedicated"
      },
      "runOptions": {
        "runOn": "folderOpen",
        "instanceLimit": 1,
        "reevaluateOnRerun": true
      }
    }
  ]
}
